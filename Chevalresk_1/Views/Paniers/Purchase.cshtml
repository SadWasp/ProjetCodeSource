
@model IEnumerable<Chevalresk_1.Models.ItemView>

@{
    ViewBag.Title = "Panier";
}

<table>
    <tbody>
        <tr>
            <td>
                <h2>
                    Panier
                </h2>

            </td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>
            </td>
        </tr>
    </tbody>
</table>


<hr />


<div class="grid-container-page-panier">
    <div id="photoContainersGrid" class="photoContainersGrid">
        @if (Model.Count() > 0)
        {
            Html.RenderPartial("ItemsList", Model);
        }
        else
        {
            <span style="color:white; font-weight:bold">Aucun item dans le panier.</span>
        }
    </div>

    <div id="FactureContainer" class="grid-container-facture">
        @Html.Partial("Facture", (decimal)TempData["Total"])
    </div>
</div>








@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/selections")
    @Scripts.Render("~/bundles/imageUploader")

}
